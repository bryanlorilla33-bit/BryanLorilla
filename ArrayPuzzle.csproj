using System;

namespace ArrayPuzzle
{
    class Task2
    {
        static void Main(string[] args)
        {
            // 1. Declare and initialize the Jagged Array (int[][])
            // Row 0: Even numbers
            // Row 1: Odd numbers
            int[][] numberMatrix = new int[][]
            {
                new int[] { 2, 4, 6, 8, 10 },
                new int[] { 1, 3, 5, 7, 9 }
            };

            Console.WriteLine("The number matrix has been initialized.");

            // 2. Extract the Digits based on the puzzle clues
            // Digit 1: Row 1, Index 3
            int digit1 = numberMatrix[1][3]; 

            // Digit 2: Row 0, Index 0
            int digit2 = numberMatrix[0][0];

            // Digit 3: Row 1, Index 4
            int digit3 = numberMatrix[1][4];

            // 3. Combine the digits into a single string (The Key)
            // We use string interpolation or concatenation to prevent mathematical addition
            string finalKey = $"{digit1}{digit2}{digit3}";

            // 4. Final Output
            Console.WriteLine("The extracted key is: " + finalKey);
            Console.WriteLine("Password: " + finalKey);
        }
    }
}
